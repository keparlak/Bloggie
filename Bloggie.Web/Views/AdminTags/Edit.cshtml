@model Bloggie.Web.Models.ViewModels.EditTagRequest
@{
}

<h1>
    Edit Tag - Admin Functionallity
</h1>
<form class="row g-3" method="post">
    <div class="col-auto">
        <label for="inputTag" class="visually-hidden">Id</label>
        <input type="text" class="form-control" id="Id" asp-for="Id" placeholder="Id" readonly>
    </div>
    <div class="col-auto">
        <label for="inputTag" class="visually-hidden">Name</label>
        <input type="text" class="form-control" id="inputTag" asp-for="Name" placeholder="Name">
    </div>
   
    <div class="col-auto">
        <label for="inputDisplayTag" class="visually-hidden">Display Name</label>
        <input type="text" class="form-control" id="inputDisplayTag" asp-for="DisplayName" placeholder="Display Name">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Update</button>
    </div>
</form>

